{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",
    "outDir": "./dist/",                      
    "noEmit": false,                        /* Do not emit outputs. */
    "strict": true,     
    "sourceMap": true,   
    "declaration": true,
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,  
    "jsx": "react"
  },
  "exclude": [
    "**/*.stories.*",
  ],
  "include": ["src/**/*"]
}
